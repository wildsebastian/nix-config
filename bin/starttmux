#!/bin/sh

# Create Main Session
tmux new-session -s Main -n Main -d
tmux new-window -n Nix -t Main:1
tmux send-keys -t Main:1 'cd ~/.nixpkgs' C-m
tmux new-window -n monadT -t Main:1
tmux send-keys -t Main:1 'cd ~' C-m

# Create Dev Session
tmux new-session -s Dev -n General -d
tmux send-keys -t General:0 'cd ~/src/' C-m

tmux attach -t Main
